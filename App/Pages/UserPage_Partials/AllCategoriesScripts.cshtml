<script>
        document.getElementById("loadCategoriesBtn").addEventListener("click", function () {
        fetch('@Url.Page("UserPage", "AllCategories")') 
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    document.getElementById("AllCategoriesContainer").innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
                    return;
                }

                let html = `
                    <div class="card mb-3" id="userTableCard">
                            <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Categories (${data.length})</h5>
                            <button type="button" class="btn-close" aria-label="Close" onclick="removeUserTable()"></button>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Parent Category</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                `;

                data.forEach(category => {
                    html += `
                        <tr>
                            <td>${category.name}</td>
                            <td>${category.parentCategoryName}</td>
                        </tr>
                    `;
                });

                html += `
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                `;

                document.getElementById("AllCategoriesContainer").innerHTML = html;
            })
            .catch(err => {
                document.getElementById("AllCategoriesContainer").innerHTML = `<div class="alert alert-danger">Error: ${err}</div>`;
            });
    });
    function removeUserTable() {
    const card = document.getElementById("userTableCard");
    if (card) {
        card.remove();
    }
}
</script>