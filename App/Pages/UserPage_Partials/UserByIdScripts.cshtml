<script>

document.getElementById("getUserForm").addEventListener("submit", function (e) {
    e.preventDefault();

    const id = document.getElementById("userId").value.trim();

    if (!id) {
        alert("Please enter a valid id.");
        return;
    }

    const baseUrl = '@Url.Page("UserPage", "UserById")';
    const url = new URL(baseUrl, window.location.origin);
    url.searchParams.append('id', id);
    const fetchUrl = url.toString();

    fetch(fetchUrl)
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                document.getElementById("userByIdContainer").innerHTML =
                    `<div class="alert alert-danger">${data.error}</div>`;
                return;
            }

            let html = `
                <div class="card mt-3" id="userTableCard">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>User Details</span>
                        <button type="button" class="btn-close" aria-label="Close" onclick="removeUserTable()"></button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Seller</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>${data.email}</td>
                                    <td>${data.firstName}</td>
                                    <td>${data.lastName}</td>
                                    <td>${data.phoneNumber}</td>
                                    <td>${data.address}</td>
                                    <td>${data.isSeller}</td>
                                    <td>${data.role}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            `;

            document.getElementById("userByIdContainer").innerHTML = html;
        })
        .catch(err => {
            document.getElementById("userByIdContainer").innerHTML =
                `<div class="alert alert-danger">Error: ${err}</div>`;
        });
});

function removeUserTable() {
    const card = document.getElementById("userTableCard");
    if (card) {
        card.remove();
    }
}
</script>